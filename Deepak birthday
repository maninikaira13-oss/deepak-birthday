<script>
const birthday = new Date("2026-01-10T00:00:00").getTime(); // ðŸŽ‚ 10 JAN 2026

function updateTimer() {
  const now = new Date().getTime();
  const diff = birthday - now;

  if (diff <= 0) {
    document.body.innerHTML = `
      <div class="container">
        <h1>ðŸŽ‰ Happy Birthday Deepak! ðŸŽ‰</h1>
        <p>
          You are my favourite person ðŸ’–<br><br>
          My happiness, my smile, my safe place.<br><br>
          Iâ€™m so lucky to have you.<br>
          Today is all about YOU ðŸŽ‚âœ¨
        </p>
      </div>`;
    playMusic();
    return;
  }

  document.getElementById("days").innerText = Math.floor(diff / (1000*60*60*24));
  document.getElementById("hours").innerText = Math.floor((diff / (1000*60*60)) % 24);
  document.getElementById("minutes").innerText = Math.floor((diff / (1000*60)) % 60);
  document.getElementById("seconds").innerText = Math.floor((diff / 1000) % 60);
}

function playMusic() {
  document.getElementById("music").play();
}

setInterval(updateTimer, 1000);
updateTimer();

// ðŸ’• floating hearts
setInterval(() => {
  const heart = document.createElement("div");
  heart.className = "heart";
  heart.style.left = Math.random() * 100 + "vw";
  heart.innerHTML = "â¤ï¸";
  document.body.appendChild(heart);
  setTimeout(() => heart.remove(), 6000);
}, 400);
</script>

